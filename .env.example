# Environment variables for Telegram Bot Builder
# Copy this file to .env and fill in your values

# Main bot token (the bot that manages other bots)
MAIN_BOT_TOKEN=your_main_bot_token_here

# Database configuration
DATABASE_URL=sqlite:///bot_builder.db
DATABASE_ECHO=False

# Admin user IDs (comma-separated)
ADMIN_USER_IDS=your_telegram_user_id_here

# Bot creation limits
MAX_BOTS_PER_USER=100
MAX_CONTESTS_PER_BOT=10

# File upload limits (in MB)
MAX_FILE_SIZE_MB=20

# Contest settings
DEFAULT_CONTEST_DURATION_HOURS=24

# Logging level
LOG_LEVEL=INFO